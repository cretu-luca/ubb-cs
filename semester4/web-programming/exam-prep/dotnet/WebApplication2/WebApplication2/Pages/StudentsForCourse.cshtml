@page
@using WebApplication2.Models
@model MyApp.Namespace.StudentsForCourseModel
@{
}

@if (HttpContext.Session.GetString("username") != null)
{
    <p> view all the students assigned to a course </p>
    <form method="post">
        <p> <input type="text" name="courseName"/> </p>
        <button type="submit"> find </button>
    </form>
    
    if (@Model.Students.Any())
    {
        <p> students in course: </p>
        foreach (Person student in @Model.Students)
        {
            <p> @student.Name </p>
        }
    }
}
else
{
    <p> you must sign in first. </p>
}