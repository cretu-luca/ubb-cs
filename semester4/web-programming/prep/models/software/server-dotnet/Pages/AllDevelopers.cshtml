@page
@model server_dotnet.Pages.AllDevelopersModel

<h2>All developers</h2>

<form method="post">
    <div>
        <label>Filter by Skill:</label>
        <input type="text" asp-for="SkillFilter" placeholder="Enter skill to filter" />
        <button type="submit">Filter</button>
        <a href="/AllDevelopers">Clear Filter</a>
    </div>
</form>

<ul>
    @foreach (var developer in Model.FilteredDevelopers)
    {
        <li>
            <strong>@developer.Name</strong> (ID: @developer.Id) <br />
            Age: @developer.Age <br />
            Skills: @developer.Skills
        </li>
    }
</ul>

@if (!Model.FilteredDevelopers.Any())
{
    <p>No developers found.</p>
} 